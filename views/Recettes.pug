if ParamsGet.Recettes == "All"
  h1: span.fondcraie Liste des Recettes
  div.liste.scroll
    ul.columns2
      each recette in Recettes
        li: a.Recette(href="/"+lang[0]+"?Recettes="+recette.Nom)=recette.Nom
else
  each recette in Recettes
    if ParamsGet.Recettes == recette.Nom
      div.grid.scroll
        h1: span.fondcraie=recette.Nom
        div
          div(style="display: flex; margin: 0 2%;")
            img(src="/images/"+recette.Image, alt="No available" width="60%", srcset="")
            .imgside
              ul Ingredients:
                li.nopuce
                each ingredient in recette.Ingredients
                  if ingredient[0] > 1
                    -pluriel="s"
                  else
                    -pluriel=""
                  if ["Cuillère à café","Cuillère à soupe","Feuille","Gousse","Gramme","Litre","Sachet"].includes(ingredient[1])
                    if ["a","e","i","o","u"].includes(ingredient[2].charAt(0))||ingredient[2]=="huile"
                      -de=" d'"
                    else
                      -de=" de "
                    li=ingredient[0]+" "+ingredient[1]+de+ingredient[2]+pluriel
                  else
                    li=ingredient[0]+" "+ingredient[2]+pluriel
          p 
            span.soustitre Préparation:
            br
            br
            each line in recette.Preparation
              =line
              br