if ParamsGet.Recettes == "All"
  h1: span.fondcraie Liste des Recettes
  div.liste.scroll
    ul.columns2
      each recette in Recettes
        li: a.Recette(href="/"+lang[0]+"?Recettes="+recette.Nom)=recette.Nom
else
  each recette in Recettes
    if ParamsGet.Recettes == recette.Nom
      div.grid.scroll
        h1: span.fondcraie=recette.Nom
        div
          div(style="display: flex; margin: 0 2%;")
            img(src="/images/"+recette.Image, alt="No available" width="40%", srcset="")
            .imgside
              ul Ingredients:
                li.nopuce
                each ingredient in recette.Ingredients
                  case ingredient[1]
                    when "Unité": li=ingredient[0]+" "+ingredient[2]
                    default: li=ingredient[0]+" "+ingredient[1]+" de "+ingredient[2]    
          p 
            span.soustitre Préparation:
            br
            br
            each line in recette.Preparation
              =line
              br